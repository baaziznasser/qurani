			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5871,
			"text": "عَلَى الْأَرَائِكِ يَنْظُرُونَ",
			"numberInSurah": 23,
