{
	"number": 83,
	"name": "سُورَةُ المُطَفِّفِينَ",
	"englishName": "Al-Mutaffifin",
	"englishNameTranslation": "Defrauding",
	"revelationType": "Meccan",
	"numberOfAyahs": 36,
	"ayahs": [
		{
			"number": 5849,
			"text": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ وَيْلٌ لِلْمُطَفِّفِينَ",
			"numberInSurah": 1,
			"juz": 30,
			"manzil": 7,
			"page": 587,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5850,
			"text": "الَّذِينَ إِذَا اكْتَالُوا عَلَى النَّاسِ يَسْتَوْفُونَ",
			"numberInSurah": 2,
			"juz": 30,
			"manzil": 7,
			"page": 587,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5851,
			"text": "وَإِذَا كَالُوهُمْ أَوْ وَزَنُوهُمْ يُخْسِرُونَ",
			"numberInSurah": 3,
			"juz": 30,
			"manzil": 7,
			"page": 587,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5852,
			"text": "أَلَا يَظُنُّ أُولَٰئِكَ أَنَّهُمْ مَبْعُوثُونَ",
			"numberInSurah": 4,
			"juz": 30,
			"manzil": 7,
			"page": 587,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5853,
			"text": "لِيَوْمٍ عَظِيمٍ",
			"numberInSurah": 5,
			"juz": 30,
			"manzil": 7,
			"page": 587,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5854,
			"text": "يَوْمَ يَقُومُ النَّاسُ لِرَبِّ الْعَالَمِينَ",
			"numberInSurah": 6,
			"juz": 30,
			"manzil": 7,
			"page": 587,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5855,
			"text": "كَلَّا إِنَّ كِتَابَ الْفُجَّارِ لَفِي سِجِّينٍ",
			"numberInSurah": 7,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5856,
			"text": "وَمَا أَدْرَاكَ مَا سِجِّينٌ",
			"numberInSurah": 8,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5857,
			"text": "كِتَابٌ مَرْقُومٌ",
			"numberInSurah": 9,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5858,
			"text": "وَيْلٌ يَوْمَئِذٍ لِلْمُكَذِّبِينَ",
			"numberInSurah": 10,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5859,
			"text": "الَّذِينَ يُكَذِّبُونَ بِيَوْمِ الدِّينِ",
			"numberInSurah": 11,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5860,
			"text": "وَمَا يُكَذِّبُ بِهِ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ",
			"numberInSurah": 12,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5861,
			"text": "إِذَا تُتْلَىٰ عَلَيْهِ آيَاتُنَا قَالَ أَسَاطِيرُ الْأَوَّلِينَ",
			"numberInSurah": 13,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5862,
			"text": "كَلَّا ۖ بَلْ ۜ رَانَ عَلَىٰ قُلُوبِهِمْ مَا كَانُوا يَكْسِبُونَ",
			"numberInSurah": 14,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5863,
			"text": "كَلَّا إِنَّهُمْ عَنْ رَبِّهِمْ يَوْمَئِذٍ لَمَحْجُوبُونَ",
			"numberInSurah": 15,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5864,
			"text": "ثُمَّ إِنَّهُمْ لَصَالُو الْجَحِيمِ",
			"numberInSurah": 16,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5865,
			"text": "ثُمَّ يُقَالُ هَٰذَا الَّذِي كُنْتُمْ بِهِ تُكَذِّبُونَ",
			"numberInSurah": 17,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5866,
			"text": "كَلَّا إِنَّ كِتَابَ الْأَبْرَارِ لَفِي عِلِّيِّينَ",
			"numberInSurah": 18,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
			"sajda": false
		},
		{
			"number": 5867,
			"text": "وَمَا أَدْرَاكَ مَا عِلِّيُّونَ",
			"numberInSurah": 19,
			"juz": 30,
			"manzil": 7,
			"page": 588,
			"ruku": 525,
			"hizbQuarter": 235,
