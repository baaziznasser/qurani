	"revelationType": "Meccan",
	"numberOfAyahs": 59,
	"ayahs": [
		{
			"number": 4415,
			"text": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ حم",
			"numberInSurah": 1,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4416,
			"text": "وَالْكِتَابِ الْمُبِينِ",
			"numberInSurah": 2,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4417,
			"text": "إِنَّا أَنْزَلْنَاهُ فِي لَيْلَةٍ مُبَارَكَةٍ ۚ إِنَّا كُنَّا مُنْذِرِينَ",
			"numberInSurah": 3,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4418,
			"text": "فِيهَا يُفْرَقُ كُلُّ أَمْرٍ حَكِيمٍ",
			"numberInSurah": 4,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4419,
			"text": "أَمْرًا مِنْ عِنْدِنَا ۚ إِنَّا كُنَّا مُرْسِلِينَ",
			"numberInSurah": 5,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4420,
			"text": "رَحْمَةً مِنْ رَبِّكَ ۚ إِنَّهُ هُوَ السَّمِيعُ الْعَلِيمُ",
			"numberInSurah": 6,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4421,
			"text": "رَبِّ السَّمَاوَاتِ وَالْأَرْضِ وَمَا بَيْنَهُمَا ۖ إِنْ كُنْتُمْ مُوقِنِينَ",
			"numberInSurah": 7,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4422,
			"text": "لَا إِلَٰهَ إِلَّا هُوَ يُحْيِي وَيُمِيتُ ۖ رَبُّكُمْ وَرَبُّ آبَائِكُمُ الْأَوَّلِينَ",
			"numberInSurah": 8,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4423,
			"text": "بَلْ هُمْ فِي شَكٍّ يَلْعَبُونَ",
			"numberInSurah": 9,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4424,
			"text": "فَارْتَقِبْ يَوْمَ تَأْتِي السَّمَاءُ بِدُخَانٍ مُبِينٍ",
			"numberInSurah": 10,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4425,
			"text": "يَغْشَى النَّاسَ ۖ هَٰذَا عَذَابٌ أَلِيمٌ",
			"numberInSurah": 11,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4426,
			"text": "رَبَّنَا اكْشِفْ عَنَّا الْعَذَابَ إِنَّا مُؤْمِنُونَ",
			"numberInSurah": 12,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4427,
			"text": "أَنَّىٰ لَهُمُ الذِّكْرَىٰ وَقَدْ جَاءَهُمْ رَسُولٌ مُبِينٌ",
			"numberInSurah": 13,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4428,
			"text": "ثُمَّ تَوَلَّوْا عَنْهُ وَقَالُوا مُعَلَّمٌ مَجْنُونٌ",
			"numberInSurah": 14,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4429,
			"text": "إِنَّا كَاشِفُو الْعَذَابِ قَلِيلًا ۚ إِنَّكُمْ عَائِدُونَ",
			"numberInSurah": 15,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4430,
			"text": "يَوْمَ نَبْطِشُ الْبَطْشَةَ الْكُبْرَىٰ إِنَّا مُنْتَقِمُونَ",
			"numberInSurah": 16,
			"juz": 25,
			"manzil": 6,
			"page": 496,
			"ruku": 431,
			"hizbQuarter": 198,
			"sajda": false
		},
		{
			"number": 4431,
			"text": "۞ وَلَقَدْ فَتَنَّا قَبْلَهُمْ قَوْمَ فِرْعَوْنَ وَجَاءَهُمْ رَسُولٌ كَرِيمٌ",
			"numberInSurah": 17,
