			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4683,
			"text": "إِنَّكُمْ لَفِي قَوْلٍ مُخْتَلِفٍ",
			"numberInSurah": 8,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4684,
			"text": "يُؤْفَكُ عَنْهُ مَنْ أُفِكَ",
