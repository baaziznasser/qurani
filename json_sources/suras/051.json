			"page": 522,
			"ruku": 456,
			"hizbQuarter": 209,
			"sajda": false
		},
		{
			"number": 4708,
			"text": "لِنُرْسِلَ عَلَيْهِمْ حِجَارَةً مِنْ طِينٍ",
			"numberInSurah": 33,
			"juz": 27,
