			"ruku": 456,
			"hizbQuarter": 209,
			"sajda": false
		},
		{
			"number": 4710,
			"text": "فَأَخْرَجْنَا مَنْ كَانَ فِيهَا مِنَ الْمُؤْمِنِينَ",
			"numberInSurah": 35,
			"juz": 27,
			"manzil": 7,
			"page": 522,
			"ruku": 456,
			"hizbQuarter": 209,
			"sajda": false
		},
		{
			"number": 4711,
			"text": "فَمَا وَجَدْنَا فِيهَا غَيْرَ بَيْتٍ مِنَ الْمُسْلِمِينَ",
			"numberInSurah": 36,
			"juz": 27,
			"manzil": 7,
