			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4685,
			"text": "قُتِلَ الْخَرَّاصُونَ",
			"numberInSurah": 10,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4686,
			"text": "الَّذِينَ هُمْ فِي غَمْرَةٍ سَاهُونَ",
			"numberInSurah": 11,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4687,
			"text": "يَسْأَلُونَ أَيَّانَ يَوْمُ الدِّينِ",
			"numberInSurah": 12,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4688,
			"text": "يَوْمَ هُمْ عَلَى النَّارِ يُفْتَنُونَ",
			"numberInSurah": 13,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4689,
			"text": "ذُوقُوا فِتْنَتَكُمْ هَٰذَا الَّذِي كُنْتُمْ بِهِ تَسْتَعْجِلُونَ",
			"numberInSurah": 14,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4690,
			"text": "إِنَّ الْمُتَّقِينَ فِي جَنَّاتٍ وَعُيُونٍ",
			"numberInSurah": 15,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4691,
			"text": "آخِذِينَ مَا آتَاهُمْ رَبُّهُمْ ۚ إِنَّهُمْ كَانُوا قَبْلَ ذَٰلِكَ مُحْسِنِينَ",
			"numberInSurah": 16,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4692,
			"text": "كَانُوا قَلِيلًا مِنَ اللَّيْلِ مَا يَهْجَعُونَ",
			"numberInSurah": 17,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4693,
			"text": "وَبِالْأَسْحَارِ هُمْ يَسْتَغْفِرُونَ",
			"numberInSurah": 18,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4694,
			"text": "وَفِي أَمْوَالِهِمْ حَقٌّ لِلسَّائِلِ وَالْمَحْرُومِ",
			"numberInSurah": 19,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4695,
			"text": "وَفِي الْأَرْضِ آيَاتٌ لِلْمُوقِنِينَ",
			"numberInSurah": 20,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4696,
			"text": "وَفِي أَنْفُسِكُمْ ۚ أَفَلَا تُبْصِرُونَ",
			"numberInSurah": 21,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4697,
			"text": "وَفِي السَّمَاءِ رِزْقُكُمْ وَمَا تُوعَدُونَ",
			"numberInSurah": 22,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4698,
			"text": "فَوَرَبِّ السَّمَاءِ وَالْأَرْضِ إِنَّهُ لَحَقٌّ مِثْلَ مَا أَنَّكُمْ تَنْطِقُونَ",
			"numberInSurah": 23,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 455,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4699,
			"text": "هَلْ أَتَاكَ حَدِيثُ ضَيْفِ إِبْرَاهِيمَ الْمُكْرَمِينَ",
			"numberInSurah": 24,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 456,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4700,
			"text": "إِذْ دَخَلُوا عَلَيْهِ فَقَالُوا سَلَامًا ۖ قَالَ سَلَامٌ قَوْمٌ مُنْكَرُونَ",
			"numberInSurah": 25,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 456,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4701,
			"text": "فَرَاغَ إِلَىٰ أَهْلِهِ فَجَاءَ بِعِجْلٍ سَمِينٍ",
			"numberInSurah": 26,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 456,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4702,
			"text": "فَقَرَّبَهُ إِلَيْهِمْ قَالَ أَلَا تَأْكُلُونَ",
			"numberInSurah": 27,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 456,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4703,
			"text": "فَأَوْجَسَ مِنْهُمْ خِيفَةً ۖ قَالُوا لَا تَخَفْ ۖ وَبَشَّرُوهُ بِغُلَامٍ عَلِيمٍ",
			"numberInSurah": 28,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 456,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4704,
			"text": "فَأَقْبَلَتِ امْرَأَتُهُ فِي صَرَّةٍ فَصَكَّتْ وَجْهَهَا وَقَالَتْ عَجُوزٌ عَقِيمٌ",
			"numberInSurah": 29,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 456,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4705,
			"text": "قَالُوا كَذَٰلِكِ قَالَ رَبُّكِ ۖ إِنَّهُ هُوَ الْحَكِيمُ الْعَلِيمُ",
			"numberInSurah": 30,
			"juz": 26,
			"manzil": 7,
			"page": 521,
			"ruku": 456,
			"hizbQuarter": 208,
			"sajda": false
		},
		{
			"number": 4706,
			"text": "۞ قَالَ فَمَا خَطْبُكُمْ أَيُّهَا الْمُرْسَلُونَ",
			"numberInSurah": 31,
			"juz": 27,
			"manzil": 7,
			"page": 522,
			"ruku": 456,
			"hizbQuarter": 209,
			"sajda": false
		},
		{
			"number": 4707,
			"text": "قَالُوا إِنَّا أُرْسِلْنَا إِلَىٰ قَوْمٍ مُجْرِمِينَ",
			"numberInSurah": 32,
			"juz": 27,
